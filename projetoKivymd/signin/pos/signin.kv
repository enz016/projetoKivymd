<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<SigninWindow>:
    id: main_wid
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.2, .2, .7, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Registro"
            bold: True
            size_hint_x: .9
        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation: "vertical"
        padding: main_wid.space_x, 10
        #spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 10
            TextInput:
                id: username_field
                hint_text:"Usu√°rio"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True 
            TextInput:
                id: pwd_field
                hint_text:"Senha"
                multiline: False 
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Registrar-se"
            size_hint_y: None
            height: 40
            background_color: (.2,.2,.7, 1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2